# Maintainer: Koki Fukuda <ko.fu.dev {a} gmail.com>
pkgname='alp'
pkgver=1.0.13
pkgrel=1
pkgdesc="Access log profiler"
arch=('x86_64' 'i686')
url='https://github.com/tkuchiki/alp'
license=('MIT')
makedepends=('go')
options=('!strip' '!emptydirs')
source=(
    'https://github.com/tkuchiki/alp/archive/refs/tags/v1.0.13.tar.gz'
)
sha256sums=(
    '8b4202dd81b0733450166356000d971613b194029510ba059695e2a181eea3c0'
)

build() {
  cd "${pkgname}-${pkgver}"

  make build
}

package() {
  cd "${pkgname}-${pkgver}"

  install -Dm755 alp "${pkgdir}/usr/bin/alp"
  install -Dm644 LICENSE "${pkgdir}/usr/share/licenses/${pkgname}/LICENSE"
}
